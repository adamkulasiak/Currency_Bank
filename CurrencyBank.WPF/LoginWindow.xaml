<Window x:Class="CurrencyBank.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyBank.WPF"
        mc:Ignorable="d"
        Title="Login" Height="346" Width="450" Background="Azure">
        <Border Background="Bisque" CornerRadius="20" Margin="20">
            <StackPanel Orientation="Vertical" Margin="20" Background="BlanchedAlmond">

                <Label Content="Log into Your account" HorizontalAlignment="Center" Foreground="Black" FontSize="14" FontWeight="Bold"></Label>
                <Separator Margin="10"></Separator>
               
                <Label Content="Username:" HorizontalAlignment="Center"></Label>
                <TextBox x:Name="UserName_tb" TextAlignment="Center" TextWrapping="Wrap" Width="200" Height="25"/>
                <Label Content="Password:" HorizontalAlignment="Center"></Label>
                <PasswordBox x:Name="password_tb"  Width="200" Height="25"/>

                <Button x:Name="Login_btn" Margin="15" Content="Login" Height="25" HorizontalAlignment="Center" Width="100" Click="Login_btn_Click"/>

            </StackPanel>
        </Border>


</Window>
