<Window x:Class="CurrencyBank.WPF.WithdrawalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyBank.WPF"
        mc:Ignorable="d"
        Title="WithdrawalWindow" Height="340" Width="378">
    <Border Background="Bisque" Height="260" CornerRadius="20" Margin="20">

        <Grid Margin="20,10,20,26" Background="BlanchedAlmond">

            <Label x:Name="Withdrawal_lbl" Content="Withdrawal" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" Width="94" Margin="0,10,0,185"/>
            <Label Content="Account ID" HorizontalAlignment="Center" Margin="0,39,0,150" RenderTransformOrigin="0.632,0.618" Width="68"/>
            <TextBox x:Name="AccountID_txt" HorizontalAlignment="Center" Margin="0,79,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="25" TextChanged="AccountID_btn_TextChanged"/>
            <Label Content="Amount" HorizontalAlignment="Center" Margin="0,112,0,0" VerticalAlignment="Top" Height="26" Width="54"/>
            <TextBox x:Name="Amount_txt" HorizontalAlignment="Center" Margin="0,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="25"/>
            <Button x:Name="Withdraw_btn" Margin="152,179,0,20" Content="Withdraw" Height="25" HorizontalAlignment="Left" Width="100"/>
            <Button x:Name="Back_btn" Content="Go back" HorizontalAlignment="Left" Height="25" Width="100" Margin="46,179,0,0" VerticalAlignment="Top" Click="Back_btn_Click"/>
        </Grid>
    </Border>
</Window>
