<Window x:Class="CurrencyBank.WPF.ExchangeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CurrencyBank.WPF"
        mc:Ignorable="d"
        Title="ExchangeWindow" Height="383" Width="384">
    <Grid Margin="10,0,10,0" Background="BlanchedAlmond" Height="343">
        <Label Content="Choose Your currency:" Height="30" Margin="114,66,114,247"/>
        <Label Content="Choose target currency:" Height="30" Margin="111,131,111,182"/>
        <ComboBox x:Name="ExchangeFrom_lb" Height="25" Width="206" Margin="69,101,69,217" >

            <ComboBoxItem Content="PLN"/>
            <ComboBoxItem Content="GBP"/>
            <ComboBoxItem Content="HUF"/>
            <ComboBoxItem Content="RON"/>
            <ComboBoxItem Content="CZK"/>
            <ComboBoxItem Content="EUR"/>

        </ComboBox>
        <ComboBox x:Name="ExchangeTo_lb" Height="25" Width="206" Margin="69,166,69,152" >

            <ComboBoxItem Content="PLN"/>
            <ComboBoxItem Content="GBP"/>
            <ComboBoxItem Content="HUF"/>
            <ComboBoxItem Content="RON"/>
            <ComboBoxItem Content="CZK"/>
            <ComboBoxItem Content="EUR"/>

        </ComboBox>
        <Label Content="Amount:" Height="30" Margin="150,196,150,117" Width="64" />
        <TextBox  HorizontalAlignment="Center" Margin="0,231,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="206" Height="25"/>
        <Button x:Name="Exchange_btn" Content="Transfer" Height="25" Margin="174,269,70,49" Width="100"/>
        <Button x:Name="Back_btn" Content="Go back" Height="25" Width="100" Margin="69,269,175,49"/>
        <Label Content="Exchange the currency" Height="30" FontSize="14" FontWeight="Bold" Margin="79,10,80,303" />

    </Grid>
</Window>
