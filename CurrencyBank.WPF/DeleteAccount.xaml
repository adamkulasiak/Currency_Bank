            <Label Content="{x:Static p:Resources.ChooseId_lb}" HorizontalContentAlignment="Center" Margin="104,56,104,147"/>
            <ComboBox x:Name="AccID_cbbx" Height="25" Width="206" Margin="72,88,72,117" >

            </ComboBox>
            <Label Content="{x:Static p:Resources.AreYouSure_lb}" HorizontalContentAlignment="Center" Margin="46,118,46,86"/>
            <Button x:Name="DeleteAcc_btn" Margin="67,154,173,51" Content="{x:Static p:Resources.Delete_btn}" Height="25" Width="100" Click="DeleteAcc_btn_Click"/>
